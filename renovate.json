{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "enabledManagers": ["bun"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "timezone": "UTC",
  "schedule": ["before 6am"],
  "packageRules": [
    {
      "matchManagers": ["bun"],
      "matchPaths": ["frontend/**"],
      "automerge": true
    }
  ]
}
